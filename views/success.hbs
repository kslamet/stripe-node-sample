<main>
  <div class="mt-40 text-center text-success">
    <h1>
      <i class="far fa-check-circle"></i> 
      Order Confirmed!
    </h1>
  </div>
  <div class="d-flex justify-content-center mt-40">
    <div class="order-confirmation-card p-4 shadow rounded bg-light" style="min-width: 320px; max-width: 400px;">
      <h2 class="mb-4 text-success">
        <i class="fas fa-receipt"></i> Order details:
      </h2>
      <div class="mb-3">
        <span class="fw-bold">Item:</span>
        <span class="ms-2">{{title}}</span>
      </div>
      <div class="mb-3">
        <span class="fw-bold">Amount Paid:</span>
        <span class="ms-2 text-primary">${{divide amount 100}}</span>
      </div>
      <div>
        <span class="fw-bold">Payment Intent ID:</span>
        <span class="ms-2 text-monospace small">{{payment_intent}}</span>
      </div>
    </div>
  </div>
</main>